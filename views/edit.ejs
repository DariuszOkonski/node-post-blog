<%- include('partials/header.ejs') %>

<div id="mt-lg" class="container">
    <h1 class="display-4 my-3">Edit: <%= post.title %></h1>

    <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="post[title]" value="<%= post.title %>" required>
        </div>
        
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" class="form-control" id="image" name="post[image]" value="<%= post.image %>" required>
        </div>
       
       
        <div class="form-group">
          <label for="content">Post Content</label>
          <textarea class="form-control" id="content" rows="5" name="post[content]" required>
              <%= post.content.trim() %>
          </textarea>
        </div>

        <a class="btn btn-success" href="/posts/<%= post._id %>">Back</a>
        <button class="btn btn-primary">Update</button>
      </form>
</div>

<%- include('partials/footer.ejs') %>

